{
    "name": "tempo-sync",
    "version": "1.0.0",
    "description": "App for copying your tempo worklogs from one account to another",
    "author": "Niklavs Katlaps <niklavs.katlaps@gmail.com>",
    "license": "MIT",
    "scripts": {
        "eslint": "eslint ./src --resolve-plugins-relative-to . --cache --no-error-on-unmatched-pattern --ext .ts",
        "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' -r dotenv/config -r tsconfig-paths/register src/index.ts"
    },
    "dependencies": {
        "axios": "^0.21.1",
        "dotenv": "^10.0.0",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^16.3.3",
        "@typescript-eslint/eslint-plugin": "^4.28.4",
        "@typescript-eslint/parser": "^4.28.4",
        "eslint": "^7.31.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "husky": "^7.0.1",
        "nodemon": "^2.0.12",
        "ts-node": "^10.1.0",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.3.5"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": "./tsconfig.json"
        },
        "plugins": [
            "@typescript-eslint",
            "simple-import-sort",
            "import"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking"
        ],
        "rules": {
            "quotes": [
                2,
                "single",
                "avoid-escape"
            ],
            "semi": [
                2,
                "always"
            ],
            "no-console": 0
        },
        "ignorePatterns": [
            "node_modules",
            "dist"
        ]
    }
}
